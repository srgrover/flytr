{% extends 'layout.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ publication.text }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ publication.imagen }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ publication.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ publication.createdAt ? publication.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('publication_index') }}">back to list</a>

    <a href="{{ path('publication_edit', {'id': publication.id}) }}">edit</a>

