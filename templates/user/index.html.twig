{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Last_name</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Username</th>
                <th>Descripcion</th>
                <th>Active</th>
                <th>Admin</th>
                <th>Image</th>
                <th>Roles</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.descripcion }}</td>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
                <td>{{ user.admin ? 'Yes' : 'No' }}</td>
                <td>{{ user.image }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('profile', {'id': user.id}) }}">Ver</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">No se encontraron usuarios</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('user_new') }}">Nuevo</a>
{% endblock %}
